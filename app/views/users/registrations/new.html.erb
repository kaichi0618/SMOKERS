<div class="container">
  <h2 class="text-center mt-5">新規登録</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="row justify-content-center">
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="form-group col-6">
        <%= f.label :姓 %>
        <%= f.text_field :last_name, autofocus: true, placeholder: "山田", class:"form-control"; %>
      </div>
      <div class="form-group col-6">
        <%= f.label :名 %>
        <%= f.text_field :first_name, placeholder: "太郎", class:"form-control"; %>
      </div>

      <div class="form-group col-12">
        <%= f.label :ニックネーム %></br>
        <%= f.text_field :nickname, placeholder: "やまちゃん", class:"form-control"; %>
      </div>

      <div class="form-group col-12">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autocomplete: "email", placeholder: "◯◯◯◯@example.com", class:"form-control"; %>
      </div>

      <div class="form-group col-12">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control"; %>
      </div>

      <div class="form-group col-12">
        <%= f.label :パスワード確認用 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control"; %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-outline-dark" %>
      </div>
    </div>
  <% end %>
  <div class="text-center"><%= render "users/shared/links" %></div>
</div>
