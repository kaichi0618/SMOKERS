<div class="container">
  <div class="row">
    <div class="col-md-12 col-sm-12 mx-2 mx-sm-auto rounded px- my-5">
     <h4>ユーザー情報編集</h4>
     <%= form_with model:@user, local:true do |f| %>
      <div class ="row my-4">
       <div class="offset-1 col-2"><%= f.label :"ユーザー画像" %></div>
       <div class="col-8 mb-2"><%= f.attachment_field :profile_image %></div>
       <div class="offset-1 col-2"><%= f.label :"氏名" %></div>
       <div class="col-4 mb-2"><%= f.text_field :last_name,class: "form-control" %></div>
       <div class="col-4 mb-2"><%= f.text_field :first_name,class: "form-control" %></div>
       <div class="offset-1 col-2"><%= f.label :"ニックネーム"%></div>
       <div class="col-8 mb-2"><%= f.text_field :nickname,class: "form-control" %></div>
       <div class="offset-1 col-2"><%= f.label :"メールアドレス" %></div>
       <div class="col-8 mb-2"><%= f.text_field :email,class: "form-control" %></div>
      </div>
      <div class="text-center">
       <%= f.submit "編集内容を保存", class: "btn btn-success" %>
       <%= link_to "退会する", users_confirm_path, class: "btn btn-danger" %>
      </div>
     <% end %>
   </div>
 </div>
</div>