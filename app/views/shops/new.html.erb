<%= render 'maps/index', maps:@shops %>
<h1>新規投稿</h1>
<%= form_with model:@shop_new,local:true do |f| %>
  <%= f.label :"画像" %>
  <%= f.attachment_field :image %>
  <%= f.label :"住所" %>
  <%= f.text_field :address %>
  <%= f.label :"店名" %>
  <%= f.text_field :shop_name %>
  <%= f.label :ジャンル名 %>
  <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, prompt: "選択してください" %>
  <%= f.label :"喫煙タイプ" %>
  <%= f.text_field :smoke_type %>
  <%= f.label :"投稿内容" %>
  <%= f.text_field :body %>
  <%= f.submit "投稿" %>
<% end %>
