<div class="container">
  <div>
    <%= link_to user_path(@shop.user) do %>
      <div class="d-inline-block"><%= attachment_image_tag @shop.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg", class:"mt-3 rounded-circle"; %><br></div>
      <div class="d-inline-block"><%= @shop.user.nickname %></div>
    <% end %>
  </div>
  <div class="post mt-2">
    <div><%= attachment_image_tag @shop, :image, :fill, 500, 500, fallback: "no-image-icon.jpg", class:"rounded"; %></div>
    <div class="font-weight-bold"><%= @shop.genre.genre_name %></div>
    <h4><%= @shop.shop_name %></h4>
    <div><%= @shop.body %></div>
    <div class="mt-3">喫煙タイプ: <%= @shop.smoke_type %></div>
    <div><i class="fas fa-map-marker-alt"></i> <%= @shop.address %></div>
  </div>
  <%= link_to "編集", edit_shop_path(@shop.id) %>
  <%= link_to "削除", shop_path(@shop.id), method: :delete, remote: true %>
  
  <div id="comments_area">
    <%= render partial: 'shop_comments/index', locals: { shop: @shop } %>
  </div>
  <div>
  <%= form_with(model:[@shop, @shop_comment], remote: true) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
  </div>
  
</div>



