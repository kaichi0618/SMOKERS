<div class="container">
    <div class="shop_show mt-4">
    <!--投稿内容-->
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to user_path(@shop.user) do %>
            <div class="d-inline-block"><%= attachment_image_tag @shop.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg", class:"rounded-circle"; %><br></div>
            <div class="d-inline-block"><%= @shop.user.nickname %></div>
          <% end %>
        </div>
        <% if @shop.user == current_user %>
        <div>
          <%= link_to edit_shop_path(@shop.id), class:"btn btn-outline-info" do %>
            <i class="far fa-edit">編集</i>
          <% end %>
          <%= link_to shop_path(@shop.id), method: :delete, remote: true, class:"btn btn-outline-danger" do %>
            <i class="fas fa-trash-alt"> 削除</i>
          <% end %>
        </div>
        <% end %>
      </div>
    <div class="post mt-2">
      <div><%= attachment_image_tag @shop, :image, :fill, 500, 500, fallback: "no-image-icon.jpg", class:"rounded"; %></div>
      <div class="font-weight-bold"><%= @shop.genre.genre_name %></div>
      <h4><%= @shop.shop_name %></h4>
      <div><%= @shop.body %></div>
      <div class="mt-3">喫煙タイプ: <%= @shop.smoke_type %></div>
      <div><i class="fas fa-map-marker-alt"></i> <%= @shop.address %></div>
      <%= @shop.created_at.strftime('%Y年%m月%d日') %>
    </div>

    <!--いいね&コメントのカウント-->
    <div class="shop_show_responce d-flex justify-content-start mb-4">
      <div id="favorite-btn_<%= @shop.id %>">
        <%= render partial: 'favorites/favorite-btn', locals: { shop: @shop} %>
      </div>
      <p class="ml-3"><i class="far fa-comments"></i>コメント<%= @shop.shop_comments.count %></p>
    </div>

    <!--コメント一覧&投稿フォーム-->
    <div id="comments_area">
      <%= render partial: 'shop_comments/index', locals: { shop: @shop } %>
    </div>
    <div class="my-4">
      <%= form_with(model:[@shop, @shop_comment], remote: true) do |f| %>
        <%= f.text_area :comment, rows:'4',placeholder: "コメントをしよう！" %>
        <button type="submit" class="btn btn-outline-primary">
          <i class="far fa-paper-plane">送信</i>
        </button>
      <% end %>
    </div>
  </div>
</div>



