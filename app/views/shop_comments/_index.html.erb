<% shop.shop_comments.each do |shop_comment| %>
  <div class="mb-4">
    <div class="shop_show_user_info">
      <%= link_to user_path(shop_comment.user) do %>
        <%= attachment_image_tag shop_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg", class:"rounded-circle"; %>
        <%= shop_comment.user.nickname %>
      <% end %>
    </div>
    <div>
      <%= shop_comment.created_at.strftime('%Y/%m/%d') %>
      <%= shop_comment.comment %>
      <% if shop_comment.user == current_user %>
        <%= link_to shop_shop_comment_path(shop_comment.shop, shop_comment), method: :delete, remote: true, class: "btn btn-outline-danger" do %>
          <i class="fas fa-trash-alt"> 削除</i>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>