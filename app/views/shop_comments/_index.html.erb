<table>
  <% shop.shop_comments.each do |shop_comment| %>
    <tr>
      <td>
        <%= link_to user_path(shop_comment.user) do %>
          <%= attachment_image_tag(shop_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %><br>
          <%= shop_comment.user.nickname %>
        <% end %>
      </td>
      <td><%= shop_comment.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= shop_comment.comment %></td>
      <% if shop_comment.user == current_user %>
      <td><%= link_to "削除", shop_shop_comment_path(shop_comment.shop, shop_comment), method: :delete, remote: true, class: "btn btn-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>