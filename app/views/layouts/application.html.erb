<!DOCTYPE html>
<html>
  <head>
    <title>SMOKERS</title>
    <link rel="manifest" href="/manifest.json"ã€€crossorigin="use-credentials">
    <script>
        window.addEventListener('load', function () {
            if ('serviceWorker' in navigator) {
                navigator.serviceWorker.register("/service-worker.js")
                    .then(function (registration) {
                        console.log("serviceWorker registed.");
                    })
            }
        });
    </script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script src="https://kit.fontawesome.com/b9cc1ebc39.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand" href="/"><%= image_tag 'img_logo.png', :size =>'130x60' %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li><%= link_to ' Home',new_shop_path,class: 'fas fa-home nav-link text-dark' %></li>
              <li><%= link_to ' My page',user_path(current_user),class: 'fas fa-users nav-link text-dark' %></li>
              <li><%= link_to ' Shops',shops_path ,class: 'fas fa-book-open nav-link text-dark'%></li>
              <li><%= link_to ' Genres',genres_path ,class: 'fas fa-city nav-link text-dark'%></li>
              <li><%= link_to ' logout', destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-dark' %></li>
            <% else %>
              <li><%= link_to ' Home',root_path,class: 'fas fa-home nav-link text-dark' %></li>
              <li><%= link_to ' sign up', new_user_registration_path,class: 'fas fa-user-plus nav-link text-dark' %></li>
              <li><%= link_to ' login', new_user_session_path ,class: 'fas fa-sign-in-alt nav-link text-dark'%></li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
